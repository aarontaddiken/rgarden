        <span class="navbar-toggler-icon"></span>
      </button>
      <a class="navbar-brand" href="#">Need Login Stuff</a>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <%= link_to "Contacts", contacts_path %>
          </li>
          <li class="nav-item">
            <%= link_to "Orders", orders_path %>
          </li>
          <li class="nav-item">
            <%= link_to "Products", products_path %>
          </li>
          <li class="nav-item">
            <%= link_to "Order Shipments", order_shipments_path %>
          </li>
          <li class="nav-item">
            <%= link_to "Product Prices", product_prices_path %>
          </li>
        </ul>
      </div>
    </nav>
    <%= yield %>
