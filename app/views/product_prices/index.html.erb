<p id="notice"><%= notice %></p>

<h1>Product Prices</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Product</th>
      <th>Billto</th>
      <th>Retail</th>
      <th>Cost</th>
      <th>Seed year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_prices.each do |product_price| %>
      <tr>
        <td><%= product_price.product.name %></td>
        <td><%= product_price.contact.name %></td>
        <td><%= number_to_currency product_price.retail %></td>
        <td><%= number_to_currency product_price.cost %></td>
        <td><%= product_price.seed_year %></td>
        <td><%= link_to 'Show', product_price %></td>
        <td><%= link_to 'Edit', edit_product_price_path(product_price) %></td>
        <td><%= link_to 'Destroy', product_price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

