<p id="notice"><%= notice %></p>

<h3 class="text-primary">Orders for <%= current_user.contact.name %></h3>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Note</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.contact.name, edit_order_path(order) %></br><%= "PO# #{order.ponum}" %></br><%= "Date: #{order.order_date.strftime('%m-%d-%Y')}" %></td>
        <td><%= order.note %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path %>
