<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Ponum</th>
      <th>Order date</th>
      <th>Request ship date</th>
      <th>Invoice date</th>
      <th>Total</th>
      <th>Note</th>
      <th>Contact</th>
      <th>Seed year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.ponum %></td>
        <td><%= order.order_date %></td>
        <td><%= order.request_ship_date %></td>
        <td><%= order.invoice_date %></td>
        <td><%= order.total %></td>
        <td><%= order.note %></td>
        <td><%= order.contact %></td>
        <td><%= order.seed_year %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

